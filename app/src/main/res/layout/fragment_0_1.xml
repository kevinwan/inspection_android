<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/lib/fr.dvilleneuve.android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/root_layout"
    tools:context=".MainActivity" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                style="@style/item_layout">
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/item_text_size"
                    android:layout_height="wrap_content"
                    android:text="车型"/>
                <EditText
                    android:id="@+id/edittext1"
                    style="@style/edittext_selector"/>
            </LinearLayout>
            <include layout="@layout/split_line"/>
            <LinearLayout
                style="@style/item_layout">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/item_text_size"
                    android:text="首次上牌"/>
                <EditText
                    android:id="@+id/edittext2"
                    style="@style/edittext_selector"/>
            </LinearLayout>
            <include layout="@layout/split_line" />
            <LinearLayout
                style="@style/item_layout">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/item_text_size"
                    android:text="出厂时间"/>
                <EditText
                    android:id="@+id/edittext3"
                    style="@style/edittext_selector"/>
            </LinearLayout>
            <include layout="@layout/split_line" />
            <LinearLayout
                style="@style/item_layout">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/item_text_size"
                    android:text="变更次数"/>
                <EditText
                    android:id="@+id/edittext4"
                    android:inputType="number"
                    style="@style/edittext_edit"/>
            </LinearLayout>
            <include layout="@layout/split_line" />
            <LinearLayout
                android:id="@+id/layout5"
                android:visibility="gone"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    style="@style/item_layout">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/item_text_size"
                        android:text="最近变更"/>
                    <EditText
                        android:id="@+id/edittext5"
                        style="@style/edittext_selector"/>
                </LinearLayout>
                <RelativeLayout
                    android:id="@+id/bannerLayout"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/split_line_color" />
                </LinearLayout>

            <LinearLayout
                style="@style/item_layout">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/item_text_size"
                    android:text="车牌号"/>
                <EditText
                    android:id="@+id/edittext6"
                    style="@style/edittext_edit"/>
            </LinearLayout>
            <include layout="@layout/split_line" />
            <LinearLayout
                style="@style/item_layout">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/item_text_size"
                    android:text="车架号"/>
                <EditText
                    android:id="@+id/edittext7"
                    style="@style/edittext_edit"/>
            </LinearLayout>
            <include layout="@layout/split_line" />
            <LinearLayout
                style="@style/item_layout">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/item_text_size"
                    android:text="交强险到期"/>
                <EditText
                    android:id="@+id/edittext8"
                    style="@style/edittext_selector"/>
            </LinearLayout>
            <include layout="@layout/split_line" />
            <LinearLayout
                style="@style/item_layout">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/item_text_size"
                    android:text="商业险到期"/>
                <EditText
                    android:id="@+id/edittext9"
                    style="@style/edittext_selector"/>
            </LinearLayout>
            <include layout="@layout/split_line" />
            <LinearLayout
                style="@style/item_layout">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/item_text_size"
                    android:text="年检到期"/>
                <EditText
                    android:id="@+id/edittext10"
                    style="@style/edittext_selector"/>
            </LinearLayout>
            <include layout="@layout/split_line" />
            <LinearLayout
                style="@style/item_layout">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/item_text_size"
                    android:text="发票价格"/>
                <EnhancedEditText
                    custom:suffixText="元"
                    android:paddingRight="4dp"
                    android:inputType="number"
                    android:id="@+id/edittext11"
                    style="@style/edittext_edit" />
            </LinearLayout>
            <include layout="@layout/split_line" />

            <LinearLayout
                style="@style/item_layout">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/item_text_size"
                    android:text="使用性质"/>
                <RadioGroup
                    android:id="@+id/radiogroup12"
                    android:layout_marginLeft="36dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/radio_pos"
                        style="@style/Radio_Style"
                        android:text="营运"/>
                    <RadioButton
                        android:id="@+id/radio_neu"
                        style="@style/Radio_Style"
                        android:text="非营运"/>
                </RadioGroup>
            </LinearLayout>
            <include layout="@layout/split_line" />
            <LinearLayout style="@style/item_layout">
                <CheckBox style="@style/checkBox_Style"
                    android:id="@+id/checkbox13"
                    android:text="原厂质保"/>
                <CheckBox style="@style/checkBox_Style"
                    android:id="@+id/checkbox14"
                    android:text="保养记录"/>
            </LinearLayout>
            <include layout="@layout/split_line" />
            <LinearLayout style="@style/item_layout">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/item_text_size"
                    android:text="出险状况"/>
                <EditText
                    android:id="@+id/edittext15"
                    style="@style/edittext_selector"
                    android:hint="点击编辑"/>
            </LinearLayout>
            </LinearLayout>
    </ScrollView>



</LinearLayout>
