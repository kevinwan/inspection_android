<?xml version="1.0" encoding="utf-8"?>
<com.gongpingjia.gpjdetector.kZViews.SildingFinishLayout android:id="@+id/sildingFinishLayout"
                                                         xmlns:android="http://schemas.android.com/apk/res/android"
                                                         xmlns:tools="http://schemas.android.com/tools"
                                                         android:layout_width="match_parent"
                                                         android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ModelFragment">

        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="180dp"
            android:background="@color/line_grey"/>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <include layout="@layout/head_modeldetail_fragment"/>


            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.gongpingjia.gpjdetector.kZViews.PinnedHeaderListView
                    android:id="@+id/listview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="@color/line_grey"
                    android:dividerHeight="1px"
                    android:scrollbars="none"/>


            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</com.gongpingjia.gpjdetector.kZViews.SildingFinishLayout>