        <LinearLayout
            android:id="@+id/mise"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="#ff808080"
                android:padding="1dp"
                android:src="#ffEFDFA3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="米"
                android:textSize="10sp" />
        </LinearLayout>


    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_marginTop="12dp"
        android:gravity="center_horizontal">

        <LinearLayout
            android:id="@+id/huangse"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="#ff808080"
                android:padding="1dp"
                android:src="#ffFEC757" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="黄"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/zise"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="#ff808080"
                android:padding="1dp"
                android:src="#ffAB00C4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="紫"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/qingse"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="#ff808080"
                android:padding="1dp"
                android:src="#ff006354" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="青"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lvse"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="#ff808080"
                android:padding="1dp"
                android:src="#ff008830" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="绿"
                android:textSize="10sp" />
        </LinearLayout>

        <!-- 此处采用将TextView的宽度设置为字体宽度的方法，解决了“其他”二字的自动换行 ，
            从而使TextView控件的大小与其他颜色框中只有一个字的TextView控件大小严格一致-->
        <LinearLayout
            android:id="@+id/otherse"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="#ff808080"
                android:padding="1dp"
                android:src="@drawable/other_color" />

            <TextView
                android:layout_width="10sp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="其他"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/otherse2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal"
            android:visibility="invisible">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="#ff808080"
                android:padding="1dp"
                android:src="@drawable/other_color" />

            <TextView
                android:layout_width="10sp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="其他"
                android:textSize="10sp" />
        </LinearLayout>

    </TableRow>

</TableLayout>
