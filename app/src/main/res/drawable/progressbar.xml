<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <solid android:color="@color/banner_bg"/>
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <gradient android:startColor="#ffc5eafa"
                    android:centerColor="#ffc5eafa"
                    android:angle="180"
                    android:endColor="#88c5eafa" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient android:startColor="#ffc5eafa"
                    android:centerColor="#ffc5eafa"
                    android:angle="180"
                    android:endColor="#88c5eafa" />
            </shape>
        </clip>
    </item>
</layer-list>